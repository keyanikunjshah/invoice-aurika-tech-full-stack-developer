<?php  
require_once("config.php");

if(isset($_POST['form_submit4'])) {
    $Description1 = trim($_POST['description']);
    $Unit_Price = trim($_POST['unitprice']);
    $Qty = trim($_POST['Quantity']);
    $Net_amount = trim($_POST['amt']);
    $Tax_Rate = trim($_POST['tax']);
    $Total_amount = trim($_POST['total']);
    $Discount = trim($_POST['Discount']);

    $sql = "INSERT INTO item_details (Description1, Unit_Price, Qty, Net_amount, Taxt_Rate, Discount, Total_Amount)
            VALUES (:Description1, :Unit_Price, :Qty, :Net_amount, :Tax_Rate, :Discount, :Total_amount)";

    $stmt = $db->prepare($sql);
    $stmt->bindParam(':Description1', $Description1, PDO::PARAM_STR);
    $stmt->bindParam(':Unit_Price', $Unit_Price, PDO::PARAM_STR);
    $stmt->bindParam(':Qty', $Qty, PDO::PARAM_STR);
    $stmt->bindParam(':Net_amount', $Net_amount, PDO::PARAM_STR);
    $stmt->bindParam(':Tax_Rate', $Tax_Rate, PDO::PARAM_STR);
    $stmt->bindParam(':Discount', $Discount, PDO::PARAM_STR);
    $stmt->bindParam(':Total_amount', $Total_amount, PDO::PARAM_STR);

    $stmt->execute();
}
?>


